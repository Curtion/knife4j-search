{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "@antfu"
  ],
  "rules": {
    "curly": [ //强制if等语句添加大括号
      "error",
      "all"
    ],
    "brace-style": [ //强制大括号不换行
      "error",
      "1tbs"
    ],
    "@typescript-eslint/brace-style": [
      "error",
      "1tbs"
    ],
    "react/react-in-jsx-scope": "off"
  },
  "env": {
    "vue/setup-compiler-macros": true
  }
}